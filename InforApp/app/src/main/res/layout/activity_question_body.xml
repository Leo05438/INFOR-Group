<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/asker_sticker"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:focusable="true"
                /><!--android:src="@drawable/flamingo"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/asker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="#0000FF"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="20sp"/><!--android:text="Pooh"-->
                <TextView
                    android:id="@+id/post_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textSize="20sp"
                    /><!--android:text="Post : 10 times"-->

            </LinearLayout>
        </LinearLayout>
        
        <TextView
            android:id="@+id/question_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="25sp"/><!--android:text=";jalkjs;dflakjs;dlfjka;sldjkf;alskjdf;alskjdf\n"-->

        <TextView
            android:id="@+id/post_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="18sp"/><!--android:text="Post:2018/5/20 18:06:06"-->
        
    </LinearLayout>
    

    <TextView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/leave_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1px" />

</LinearLayout>